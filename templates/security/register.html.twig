{% extends 'base.html.twig' %}

{% block title %}Регистрация{% endblock %}

{% block stylesheets %}
  <link rel="stylesheet" href="{{ asset('assets/auth.css') }}">
{% endblock %}

{% block body %}
  <div class="wrap">
    <div class="card">
      <div class="brand">
        <div class="logo">⨉</div>
        <div>
          <h1>Регистрация</h1>
          <p class="sub">Создайте учетную запись для входа в систему.</p>
        </div>
      </div>

      {% if error %}
        <div class="error">{{ error }}</div>
      {% endif %}

      <form method="post" action="{{ path('app_register') }}">
        <div class="row">
          <div class="field">
            <label class="label" for="inputName">Имя</label>
            <div class="control">
              <input id="inputName" type="text" name="name" placeholder="Иван" required>
            </div>
          </div>
          <div class="field">
            <label class="label" for="inputLastName">Фамилия</label>
            <div class="control">
              <input id="inputLastName" type="text" name="lastName" placeholder="Иванов">
            </div>
          </div>
        </div>

        <div class="field">
          <label class="label" for="inputEmail">Email</label>
          <div class="control">
            <input id="inputEmail" type="email" name="email" placeholder="you@example.com" required>
          </div>
        </div>

        <div class="field">
          <label class="label" for="inputPassword">Пароль</label>
          <div class="control">
            <input id="inputPassword" type="password" name="password" placeholder="Не менее 6 символов" required>
          </div>
        </div>

        <div class="actions">
          <button class="btn" type="submit">Зарегистрироваться</button>
        </div>
      </form>

      <div class="helper">Уже есть аккаунт? <a class="link-accent" href="{{ path('app_login') }}">Войти</a></div>
    </div>
  </div>
{% endblock %}
