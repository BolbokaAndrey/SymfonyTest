{% extends 'base.html.twig' %}

{% block title %}Админка — Новости{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/admin.css') }}">
    <style>
        .news-grid {
            display: grid;
            gap: 1.25rem;
        }

        .news-card {
            background: rgba(255, 255, 255, 0.02);
            border: 1px solid rgba(255, 255, 255, 0.08);
            border-radius: 12px;
            padding: 1.25rem;
            display: flex;
            gap: 1.25rem;
            transition: all 0.2s ease;
        }

        .news-card:hover {
            background: rgba(255, 255, 255, 0.04);
            border-color: rgba(255, 255, 255, 0.12);
        }

        .news-image {
            flex-shrink: 0;
            width: 120px;
            height: 80px;
            border-radius: 8px;
            overflow: hidden;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .news-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .news-content {
            flex: 1;
            min-width: 0;
        }

        .news-title {
            margin: 0 0 0.5rem 0;
            font-size: 1.125rem;
            font-weight: 600;
            color: var(--text);
        }

        .news-preview {
            margin: 0 0 1rem 0;
            color: var(--muted);
            line-height: 1.5;
            font-size: 0.9375rem;
        }

        .news-meta {
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
            font-size: 0.75rem;
            color: var(--muted);
        }

        .news-tags {
            display: flex;
            flex-wrap: wrap;
            gap: 0.5rem;
            margin-top: 0.5rem;
        }

        .tag {
            background: rgba(74, 108, 247, 0.1);
            color: #4a6cf7;
            padding: 0.25rem 0.5rem;
            border-radius: 4px;
            font-size: 0.75rem;
        }

        .news-actions {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
            min-width: 120px;
        }

        .btn-edit {
            padding: 0.5rem 0.75rem;
            font-size: 0.75rem;
        }

        .btn-delete {
            padding: 0.5rem 0.75rem;
            font-size: 0.75rem;
            background: var(--danger);
        }

        @media (max-width: 768px) {
            .news-card {
                flex-direction: column;
            }

            .news-image {
                width: 100%;
                height: 160px;
            }

            .news-actions {
                flex-direction: row;
                margin-top: 1rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="layout">
        {% include 'admin/components/sidebar.html.twig' %}
        <main class="content">
            {% embed 'admin/components/header.html.twig' %}
                {% block header_actions %}
                    <a href="{{ path('admin_content_news_new') }}" class="btn">Добавить новость</a>
                {% endblock %}
            {% endembed %}

            <div class="card">
                {% if news is empty %}
                    <div class="empty-state">
                        <p>Пока нет созданных новостей</p>
                        <a href="{{ path('admin_content_news_new') }}" class="btn">Создать первую новость</a>
                    </div>
                {% else %}
                    <div class="news-grid">
                        {% for newsItem in news %}
                            <div class="news-card">
                                {% if newsItem.propertyValues.image is defined and newsItem.propertyValues.image %}
                                    <div class="news-image">
                                        <img src="{{ asset(newsItem.propertyValues.image.value) }}" alt="{{ newsItem.propertyValues.title.value ?? 'Изображение новости' }}">
                                    </div>
                                {% endif %}

                                <div class="news-content">
                                    <h3 class="news-title">
                                        {{ newsItem.propertyValues.title.value ?? 'Без названия' }}
                                    </h3>

                                    {% if newsItem.propertyValues.content is defined and newsItem.propertyValues.content %}
                                        <p class="news-preview">
                                            {{ newsItem.propertyValues.content.value|length > 200 ?
                                               newsItem.propertyValues.content.value|striptags|slice(0, 200) ~ '...' :
                                               newsItem.propertyValues.content.value|striptags }}
                                        </p>
                                    {% endif %}

                                    {% if newsItem.propertyValues.tags is defined and newsItem.propertyValues.tags and newsItem.propertyValues.tags.value is iterable %}
                                        <div class="news-tags">
                                            {% for tag in newsItem.propertyValues.tags.value %}
                                                <span class="tag">{{ tag }}</span>
                                            {% endfor %}
                                        </div>
                                    {% endif %}

                                    {% set properties = newsItem.getPropertiesAsArray() %}
                                    <div class="news-meta">
                                        <span>Создана: {{ newsItem.createdAt|date('d.m.Y H:i') }}</span>
                                        {% if properties.active is defined and properties.active is not empty %}
                                            <span>Активна с: {{ properties.active|date('d.m.Y H:i') }}</span>
                                        {% endif %}
                                    </div>
                                </div>

                                <div class="news-actions">
                                    <a href="{{ path('admin_content_news_new', {'id': newsItem.id}) }}" class="btn btn-edit">
                                        Редактировать
                                    </a>
                                    <button class="btn btn-delete"
                                            onclick="if(confirm('Вы уверены, что хотите удалить эту новость?')) { document.getElementById('delete-form-{{ newsItem.id }}').submit(); }">
                                        Удалить
                                    </button>
                                    <form id="delete-form-{{ newsItem.id }}"
                                          action="{{ path('admin_content_news', {'id': newsItem.id}) }}"
                                          method="POST"
                                          style="display: none;">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ newsItem.id) }}">
                                    </form>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </main>
    </div>
{% endblock %}
