{% extends 'base.html.twig' %}

{% block title %}Новости - Админка{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/admin.css') }}">
{% endblock %}

{% block body %}
    <div class="layout">
        {% include 'admin/components/sidebar.html.twig' %}
        <main class="content">
            {% embed 'admin/components/header.html.twig' %}
                {% block header_actions %}
                    <a href="{{ path('admin_content_news_new') }}" class="btn">Новая новость
                    </a>
                {% endblock %}
            {% endembed %}

            <div class="news-container">
                {% if news is empty %}
                    <div class="empty-state">
                        <p>Новостей пока нет. Хотите создать первую?</p>
                        <a href="{{ path('admin_content_news_new') }}" class="btn">
                            <i class="fas fa-plus"></i> Создать новость
                        </a>
                    </div>
                {% else %}
                    <div class="news-grid">
                        {% for newsItem in news %}
                            <article class="news-card">
                                <div class="news-content">
                                    {% if newsItem.properties is defined and newsItem.properties.image is defined and newsItem.properties.image.value is not empty %}
                                    <div class="news-image">
                                        <img
                                            src="{{ asset('uploads/news/' ~ newsItem.properties.image.value) }}"
                                            alt="{{ newsItem.title }}"
                                            onerror="this.onerror=null; this.src='{{ asset('assets/images/placeholder.jpg') }}'"
                                            class="news-thumbnail"
                                        >
                                    </div>
                                    {% else %}
                                    <div class="news-image">
                                        <img
                                            src="{{ asset('assets/images/placeholder.jpg') }}"
                                            alt="Изображение отсутствует"
                                            class="news-thumbnail"
                                        >
                                    </div>
                                    {% endif %}
                                    <div class="news-main">
                                        <div>
                                            <h2 class="news-title">{{ newsItem.title }}</h2>
                                            <p class="news-text">{{ newsItem.text|striptags|slice(0, 100) }}{% if newsItem.text|length > 100 %}...{% endif %}</p>
                                            {% if newsItem.properties is defined and newsItem.properties.tags is defined and newsItem.properties.tags.value is not empty %}
                                                <div class="news-properties">
                                                    {% for tag in newsItem.properties.tags.value|split(',') %}
                                                        <span class="property-tag" title="{{ tag }}">
                                                            {{ tag }}
                                                        </span>
                                                    {% endfor %}
                                                </div>
                                            {% endif %}
                                        </div>
                                    </div>
                                    <div class="news-meta">
                                        <div class="news-time">
                                            <time datetime="{{ newsItem.createdAt|date('Y-m-d\TH:i:s') }}" title="{{ newsItem.createdAt|date('d.m.Y H:i:s') }}">
                                                <i class="far fa-calendar-alt"></i> {{ newsItem.createdAt|date('d.m.Y H:i') }}
                                            </time>
                                        </div>
                                        <div class="news-source">
                                            {% if newsItem.properties is defined and newsItem.properties.source is defined and newsItem.properties.source.value is not empty %}
                                                {{ newsItem.properties.source.name }}: {{ newsItem.properties.source.value }}
                                            {% endif %}
                                        </div>
                                        <div class="news-id">#{{ newsItem.id }}</div>
                                    </div>
                                </div>
                                <div class="news-actions">
                                    <a href="{{ path('admin_content_news_edit', {'id': newsItem.id}) }}" class="btn btn-edit">
                                        <span>Редактировать</span>
                                    </a>
                                    <form action="{{ path('admin_content_news_delete', {'id': newsItem.id}) }}" method="post" onsubmit="return confirm('Вы уверены, что хотите удалить эту новость?')" class="inline-form">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ newsItem.id) }}">
                                        <button type="submit" class="btn btn-delete">
                                            <span>Удалить</span>
                                        </button>
                                    </form>
                                </div>
                            </article>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </main>
    </div>
{% endblock %}
